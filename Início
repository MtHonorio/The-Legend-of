#include <stdio.h>
#include <string.h>
#include <ctype.h>

char Resposta(char resp){

    if(resp=='s'||resp=='p'||resp=='S'||resp=='y'){
        return 1;
    }
    if(resp=='n'||resp=='N'){
        return 0;
    }
}
int quadResposta(int resp){

    switch(resp){
        case 1:
            return 1;
            break;
        case 2:
            return 2;
            break;
        case 3:
            return 3;
            break;
        case 4:
            return 4;
            break;
        default:
            return 0;
    }

}

