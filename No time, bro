#include<stdio.h>
#include <conio.h>
#include <stdlib.h>// necessário p/ as funções rand() e srand()
#include<time.h>//necessário p/ função time()
#include <string.h>
#include <ctype.h>

 int comTempo=100;

void Pergunta( ){
  int opcao;
  printf("1 - Claro!\n2 - Sem tempo, irmao\n");
  scanf("%d", &opcao);
  FuncaoOpcao(opcao);
}

void FuncaoOpcao(int x){
if(x==2){ comTempo = comTempo - 20;}
}

int Resposta(int medidor, int comTempo){
if (medidor > comTempo){return(0);}
if (medidor <= comTempo){return(1);}
}

int main(void)
{
  char Nome[10], PrimeiraLetra;
  int i, medidor, opcao, reposta;

  srand(time(NULL));     /*INICIA GERADOR DE NÚMEROS DA FUNÇÃO TIME, ASSIM, NÃO SERÁ GERADO
                           O MESMO VALOR SEMPRE AO INICIAR O PROGRAMA*/

  puts("Qual o seu nome? \n");
  fflush(stdin);
  scanf("%c", &PrimeiraLetra);
  scanf("%s", &Nome);
  PrimeiraLetra = toupper(PrimeiraLetra); //MAIUSCULO
  printf("%c%s ", PrimeiraLetra, Nome);
  system("cls");
  for(i=0;i<=700000000;i++){} //DELAY

  printf("%c%s, me ajuda com a tarefa? \n", PrimeiraLetra, Nome );
  Pergunta( );
  system("cls");
  for(i=0;i<=700000000;i++){} //DELAY


  printf("%c%s, me ensina a jogar bola? \n", PrimeiraLetra, Nome );
  Pergunta( );
  system("cls");
  for(i=0;i<=700000000;i++){} //DELAY

  printf("%c%s, me deixa ser do curso? \n", PrimeiraLetra, Nome );
  Pergunta( );
  system("cls");
  for(i=0;i<=700000000;i++){} //DELAY

  printf("%c%s, me deixa criar um canal no youtube? \n", PrimeiraLetra, Nome );
  Pergunta( );
  system("cls");
  for(i=0;i<=700000000;i++){} //DELAY

  printf("%c%s, VC JA FEZ O ROTEIRO? \n", PrimeiraLetra, Nome );
  Pergunta( );
  system("cls");
  for(i=0;i<=700000000;i++){} //DELAY

  for (i=0; i < 1; i++)
  {
    // GERAR VALORES ALEATÓRIOS DE 0 A 100
    medidor = rand() % 100;
    //getch();
  }
    reposta = Resposta(medidor, comTempo);

    if(reposta == 0){

            printf("\n\t\t\tSEM");
            for(i=0;i<=700000000;i++){}

            printf(" TEMPO");
            for(i=0;i<=700000000;i++){}

            printf(", IRMAO! \n");
            for(i=0;i<=700000000;i++){}


    }else{
     puts("Vou te ajudar ss :) ");
    }




  return 0;
}
